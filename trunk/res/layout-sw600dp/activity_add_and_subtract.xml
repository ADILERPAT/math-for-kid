<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/number_first_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/text_number_padding"
            android:text="@string/number"
            android:textSize="@dimen/text_result"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/operation_first_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/text_number_padding"
            android:text="@string/plus"
            android:textSize="@dimen/text_result" />

        <TextView
            android:id="@+id/number_second_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/text_number_padding"
            android:text="@string/number"
            android:textSize="@dimen/text_result"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/operation_second_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/text_number_padding"
            android:text="@string/subtract"
            android:textSize="@dimen/text_result" />

        <TextView
            android:id="@+id/number_third_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/text_number_padding"
            android:text="@string/number"
            android:textSize="@dimen/text_result"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/text_number_padding"
            android:text="@string/equal"
            android:textSize="@dimen/text_result" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/text_number_padding"
            android:text="@string/question_mark"
            android:textSize="@dimen/text_result" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_third"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="center|bottom"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/result_first_img"
                android:layout_width="@dimen/width_result"
                android:layout_height="wrap_content"
                android:contentDescription="@string/image_one_text"
                android:src="@drawable/star" />

            <TextView
                android:id="@+id/result_first_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/number"
                android:textSize="@dimen/text_result" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/result_second_img"
                android:layout_width="@dimen/width_result"
                android:layout_height="wrap_content"
                android:contentDescription="@string/image_one_text"
                android:src="@drawable/star" />

            <TextView
                android:id="@+id/result_second_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/number"
                android:textSize="@dimen/text_result" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/result_third_img"
                android:layout_width="@dimen/width_result"
                android:layout_height="wrap_content"
                android:contentDescription="@string/image_one_text"
                android:src="@drawable/star" />

            <TextView
                android:id="@+id/result_third_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/number"
                android:textSize="@dimen/text_result" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/result_four_img"
                android:layout_width="@dimen/width_result"
                android:layout_height="wrap_content"
                android:contentDescription="@string/image_one_text"
                android:src="@drawable/star" />

            <TextView
                android:id="@+id/result_four_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/number"
                android:textSize="@dimen/text_result" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>