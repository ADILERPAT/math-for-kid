<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <ImageView
        android:id="@+id/image_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/image_item"
        android:contentDescription="@string/app_name" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/image_list"
        android:layout_alignLeft="@+id/image_list"
        android:layout_alignRight="@+id/image_list"
        android:layout_alignTop="@+id/image_list"
        android:layout_margin="1dp"
        android:gravity="center"
        android:text="@string/first_number_tv"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/text_size_operation" />

</RelativeLayout>